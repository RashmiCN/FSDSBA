package com.capsule.TaskTracker.componentTest;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.mockito.Mockito;
import org.skyscreamer.jsonassert.JSONAssert;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.autoconfigure.web.servlet.WebMvcTest;
import org.springframework.http.MediaType;
import org.springframework.test.context.junit4.SpringRunner;
import org.springframework.test.web.servlet.MockMvc;
import org.springframework.test.web.servlet.MvcResult;
import org.springframework.test.web.servlet.RequestBuilder;
import org.springframework.test.web.servlet.request.MockMvcRequestBuilders;

import com.capsule.TaskTracker.component.UserControllerRest;
import com.capsule.TaskTracker.entity.User;
import com.capsule.TaskTracker.service.UserService;

@RunWith(SpringRunner.class)
@WebMvcTest(value=UserControllerRest.class)
public class UserControllerTest {

	
	@Autowired
	private MockMvc mockMvc;
	
	@Autowired
	private UserService userService;
	
	User user = new User(1,"Hiro","Protagonist",123,1,1);
	
	String exampleJson = "{\"userId\":\"1\",\"firstName\":\"Hiro\","
			+ "\"lastname\":\"Protagonist\",\"employeeId\":\"123\","
			+"\"projectId\":\"1\",\"taskId\":\"1\",";
	
	@Test
	public void retrieveUserTest() throws Exception{
		Mockito.when(userService.getUser(Mockito.anyInt())).thenReturn(user);
		RequestBuilder requestBuilder = MockMvcRequestBuilders.get(
				"/getuser/1").accept(
				MediaType.APPLICATION_JSON);
		MvcResult result = mockMvc.perform(requestBuilder).andReturn();

		System.out.println(result.getResponse());
		String expected = "{\"userId\":\"1\",\"firstName\":\"Hiro\","
				+ "\"lastname\":\"Protagonist\",\"employeeId\":\"123\","
				+"\"projectId\":\"1\",\"taskId\":\"1\",";
		JSONAssert.assertEquals(expected, result.getResponse()
				.getContentAsString(), false);
	}

}
